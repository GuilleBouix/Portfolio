---
const { title, items } = Astro.props;
import SkillItem from "./SkillItem.astro";
---

<div data-aos="zoom-in" data-aos-duration="800" data-aos-delay="100" class="bg-gray-800/40 border border-gray-600/30 rounded-xl p-6 shadow-md">
  <h3 class="text-md font-semibold text-title mb-4 flex items-center gap-2">
    <span class="size-2 bg-sky-400 rounded-full shadow-[0_0_10px_2px_rgba(56,189,248,0.5)]"></span>
    {title}
  </h3>

  <div class="flex flex-wrap gap-3">
    {items.map((item: string) => <SkillItem name={item} />)}
  </div>
</div>