---
interface Category extends String {}
interface TechItem extends String {}

const {
  title,
  subtitle,
  categories = [] as Category[],
  banner,
  description,
  github,
  tech = [] as TechItem[],
} = Astro.props;
---

<section class="max-w-5xl mx-auto py-5 px-4 sm:px-6 lg:px-40">
  <a data-aos="fade-in" data-aos-duration="800" href="/" class="text-sky-500 flex items-center gap-2 text-sm mb-4">
    ← Volver
  </a>

  <!-- Categories -->
  <div data-aos="fade-in" data-aos-duration="800" data-aos-delay="100" class="flex gap-2 mb-6">
    {
      categories.map((cat: Category) => (
        <span class="w-fit px-3 py-1 bg-sky-500/10 border border-sky-500/20 text-sky-300 text-sm rounded-md">
          {cat}
        </span>
      ))
    }
  </div>

  <h1 data-aos="fade-in" data-aos-duration="800" data-aos-delay="100" class="text-title text-4xl font-bold mb-6">{title}</h1>

  <div data-aos="fade-in" data-aos-duration="800" data-aos-delay="200" class="h-64 overflow-hidden mb-6 border border-gray-500/20 rounded-2xl">
    <img loading="lazy" width="1920" height="1080" alt=`Proyecto ${title}` src={banner} class="w-full h-full object-cover" />
  </div>

  <h2 data-aos="fade-in" data-aos-duration="800" data-aos-delay="250" class="text-title text-xl font-medium mb-3">{subtitle}</h2>

  <p data-aos="fade-in" data-aos-duration="800" data-aos-delay="300" class="text-paragraph mb-6">{description}</p>

  <a data-aos="fade-in" data-aos-duration="800" href={github} target="_blank"
    class="flex items-center gap-2 w-fit px-4 py-3 text-white text-sm rounded-lg bg-sky-500/20 border border-sky-400/30 hover:bg-sky-500/30 hover:border-sky-400/40 transition mb-10">
    
    <!-- SVG directo (copia este código) -->
    <svg class="w-5 h-5" fill="white" viewBox="0 0 24 24" aria-hidden="true">
      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
    </svg>
    Ver en GitHub
  </a>

  <!-- Tech Stack -->
  <h3 data-aos="fade-in" data-aos-duration="800" class="text-title text-xl font-semibold mb-3">Tecnologías Utilizadas</h3>
  <div data-aos="fade-in" data-aos-duration="800" data-aos-delay="100" class="flex flex-wrap gap-3 mb-10">
    {
      tech.map((t: TechItem) => (
        <span class="px-3 py-1 bg-sky-500/10 border border-sky-500/20 text-sky-300 text-sm rounded-md">
          {t}
        </span>
      ))
    }
  </div>

  <!-- Gallery -->
  <h4 data-aos="fade-in" data-aos-duration="800" class="text-title text-xl font-semibold mb-4">Galería de Imágenes</h4>
  <div data-aos="fade-in" data-aos-duration="800" data-aos-delay="100" class="mb-10">
    <slot name="gallery" />
  </div>

  <!-- Features -->
  <h4 data-aos="fade-in" data-aos-duration="800" class="text-title text-xl font-semibold mb-4">Características Principales</h4>
  <div class="mb-10">
    <slot name="features" />
  </div>
</section>