---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import ProjectPage from "../../components/Projects/ProjectPage.astro";
import Gallery from "../../components/Projects/Gallery.astro";
import FeaturesCard from "../../components/Projects/FeaturesCard.astro";

const myImages = [
  { src: "/img/projects/sistemagcr/1.webp", alt: "Primera imagen" },
  { src: "/img/projects/sistemagcr/2.webp", alt: "Segunda imagen" },
  { src: "/img/projects/sistemagcr/3.webp", alt: "Tercera imagen" },
  { src: "/img/projects/sistemagcr/4.webp", alt: "Cuarta imagen" },
  { src: "/img/projects/sistemagcr/5.webp", alt: "Quinta imagen" },
  { src: "/img/projects/sistemagcr/6.webp", alt: "Sexta imagen" },
  { src: "/img/projects/sistemagcr/7.webp", alt: "Séptima imagen" },
  { src: "/img/projects/sistemagcr/8.webp", alt: "Octava imagen" }
]
---

<Layout>
  <header>
    <Navbar />
  </header>

  <main id="content">
    <ProjectPage
      title="Sistema GCR"
      subtitle="Sistema de Gestión de Comida Rápida"
      categories={["Aplicación de Escritorio", "Proyecto Final"]}
      banner="/img/projects/sistemagcr.webp"
      description="GCR es una aplicación de escritorio desarrollada en Visual Basic 6.0 con base de datos Microsoft Access, diseñada para gestionar las operaciones diarias de un negocio de comida rápida. El sistema centraliza el control de stock según proveedores, registra movimientos de productos, gestiona ventas y genera reportes operativos. Además, ofrece herramientas para organizar menús, combos y categorías de productos, así como la gestión de proveedores y usuarios con roles claramente diferenciados (administrador y operador), garantizando un acceso controlado y un orden operativo en todo el sistema."
      github="https://github.com/GuilleBouix/Sistema-GCR"
      tech={["Microsoft Visual Basic 6.0", "Microsoft Access"]}
    >
  
      <!-- Galería -->
      <div slot="gallery">
        <Gallery images={myImages} />
      </div>
  
      <!-- Funcionalidades -->
      <div slot="features" class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
  
        <FeaturesCard
          title="Gestión de Stock"
          description="Control basado en proveedores, registro detallado de movimientos y alertas para evitar quedarte sin productos en el peor momento."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7.99999 10.8571 12 13.1428m-4.00001-2.2857L4 13.1428m3.99999-2.2857.00004-4.57139M12 13.1428v4.5715m0-4.5715-4.00001 2.2857M12 13.1428l4-2.2857m-4 2.2857V8.57143m0 4.57137 4 2.2858m-4 2.2857L7.99999 20M12 17.7143 16 20m-8.00001 0L4 17.7143v-4.5715M7.99999 20v-4.5715M4 13.1428l3.99999 2.2857M16 6.28571 12 4 8.00003 6.28571m7.99997 0v4.57139m0-4.57139-4 2.28572m4 2.28567 4 2.2858M8.00003 6.28571 12 8.57143m8 4.57147v4.5714L16 20m4-6.8571-4 2.2857M16 20v-4.5714"/>
          </svg>
        </FeaturesCard>
  
        <FeaturesCard
          title="Ventas con Descuentos"
          description="Registro de ventas con aplicación de descuentos y un historial controlado para evitar “errores” sospechosos."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 17.345a4.76 4.76 0 0 0 2.558 1.618c2.274.589 4.512-.446 4.999-2.31.487-1.866-1.273-3.9-3.546-4.49-2.273-.59-4.034-2.623-3.547-4.488.486-1.865 2.724-2.899 4.998-2.31.982.236 1.87.793 2.538 1.592m-3.879 12.171V21m0-18v2.2"/>
          </svg>
        </FeaturesCard>
  
        <FeaturesCard
          title="Generación de Reportes"
          description="Reportes de ventas y stock agrupados por categoría y proveedor."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 3v4a1 1 0 0 1-1 1H5m4 10v-2m3 2v-6m3 6v-3m4-11v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1 .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/>
          </svg>
        </FeaturesCard>
  
        <FeaturesCard
          title="Menús y Combos"
          description="Gestión completa de productos, categorías y combos para mantener el catálogo organizado y fácil de actualizar."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <g clip-path="url(#a)">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10.4149 10.7623.0005.0109m3.0868 3.0764.0005.0108M8.91554 15.349l.00046.0108m-.8276-8.44549L4.39857 19.9133l12.95163-3.7371m-.8271-8.43475c2.0971 2.09707 3.269 4.77055 3.5172 7.51635.067.7413-.4619 1.3752-1.1869 1.5293-1.0146.2158-1.9613-.5811-2.0926-1.615-.2412-1.9-.9437-3.5721-2.52-5.1484-1.5779-1.57793-3.3173-2.3457-5.25302-2.61955-1.02139-.1445-1.79555-1.1099-1.5387-2.10314.17236-.66653.76818-1.14208 1.45754-1.08543 2.78088.22851 5.49388 1.40332 7.61648 3.52587Z"/>
            </g>
            <defs>
              <clipPath id="a">
                <path fill="#fff" d="M0 0h24v24H0z"/>
              </clipPath>
            </defs>
          </svg>
        </FeaturesCard>
  
        <FeaturesCard
          title="Proveedores"
          description="Registro y gestión clara y ordenada de proveedores."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h6l2 4m-8-4v8m0-8V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v9h2m8 0H9m4 0h2m4 0h2v-4m0 0h-5m3.5 5.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Zm-10 0a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0Z"/>
          </svg>
        </FeaturesCard>
  
        <FeaturesCard
          title="Roles y Usuarios"
          description="Separación clara entre administrador y operador para garantizar que cada uno acceda solo a lo que le corresponde."
        >
          <svg slot="icon" class="w-6 h-6 text-sky-400 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="2" d="M10 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h2m10 1a3 3 0 0 1-3 3m3-3a3 3 0 0 0-3-3m3 3h1m-4 3a3 3 0 0 1-3-3m3 3v1m-3-4a3 3 0 0 1 3-3m-3 3h-1m4-3v-1m-2.121 1.879-.707-.707m5.656 5.656-.707-.707m-4.242 0-.707.707m5.656-5.656-.707.707M12 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
          </svg>
        </FeaturesCard>
  
      </div>
  
    </ProjectPage>
  </main>

  <Footer />
</Layout>